#!/bin/sh
# postrm script for qundr-sec-ops
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

QSECOPS_ON_AIR="qsecops_on_air"
NDR_PATH="/.data/qne-qundr"
IMAGE_PATH=${NDR_PATH}/sec-ops/doc/qinfluxdbkapacitor-image
LOG_PATH=${NDR_PATH}/log/sec-ops
SEC_OPS_PATH=${NDR_PATH}/sec-ops
case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        if [ -f "$IMAGE_PATH/$QSECOPS_ON_AIR" ]; then
            `rm -f $IMAGE_PATH/$QSECOPS_ON_AIR`
        fi
        if [ "x$?" = "x1" ]; then
            echo "rm $IMAGE_PATH/$QSECOPS_ON_AIR failure"
            exit 1
        fi
        if [ x"$1" = x"remove" ]; then
            echo "remove case. Remove all related folder"
            `rm -rf $LOG_PATH`
            `rm -rf $SEC_OPS_PATH`
            `qrmcfg --app=qundr "retention_policy" "default"`
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
