#!/bin/bash
# preinst script for qundr-sec-ops
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

TARGET_IMG_NAME="qinfluxdbkapacitor_base"

remove_old_images(){
    IMAGES=`docker images --format '{{.ID}} {{.Repository}}'`
    while IFS= read -r LINE; do
        IMAGE_ID=`echo "${LINE}" | awk '{print($1)}'`
        IMAGE_REPO=`echo "${LINE}" | awk '{print($2)}'`
        if [ "x${TARGET_IMG_NAME}" == "x${IMAGE_REPO}" ]; then
            docker rmi ${IMAGE_ID} >/dev/null 2>&1 || true
        fi
    done <<< "${IMAGES}"
}

case "$1" in
    install|upgrade)
        echo "qundr-sec-ops: Preinstall check $2"
        systemctl start docker || true
        remove_old_images || true
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
